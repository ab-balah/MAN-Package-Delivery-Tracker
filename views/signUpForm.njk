<form id="signup_form" action="javascript:void(0);" onsubmit="signup()">
    {% if not tables.Person %}
      <h5>Looks like we don't have your information. Please input the following to Sign Up.</h5>
      <div class="row">
        <div class="form-group col-6">
          <label for="signup_firstname_input">First Name</label>
          <input type="text" class="form-control" id="signup_firstname_input" placeholder="First Name" name="Fname" required />
        </div>
        <div class="form-group col-6">
          <label for="signup_lastname_input">Last Name</label>
          <input type="text" class="form-control" id="signup_lastname_input" placeholder="Last Name" name="Lname" required />
        </div>
      </div>
      <div class="form-group">
        <label for="signup_email_input">Email</label>
        <input type="email" class="form-control" id="signup_email_input" placeholder="Email" name="Email" required />
      </div>
      <div class="row">
        <div class="form-group col-6">
          <label for="signup_phone_input">Phone Number</label>
          <input type="tel" class="form-control" id="signup_phone_input" placeholder="XXXXXXXXXX" pattern="[0-9]{10}" name="Phone" required />
        </div>
        <div class="form-group col-6">
          <label for="signup_birthdate_input">Birth date</label>
          <input type="date" class="form-control" id="signup_birthdate_input" name="Birth_Date" required />
        </div>
      </div>
    {% else %}
      {% if not tables.Customer_Account %}
        <h5>Looks like we already have some of your information. Please input the following to Sign Up.</h5>
      {% endif %}
    {% endif%}
    {% if not tables.Customer %}
      <div class="row">
        <div class="form-group col-6">
          <label for="signup_country_input">Country</label>
          <select id="signup_country_input" class="form-select" name="Country" required>
              {% for country in countryList %}
                  <option value= "{{ country }}" >{{ country }}</option>
              {% endfor %}
          </select>
        </div>
        <div class="form-group col-6">
          <label for="signup_city_input">City</label>
          <input type="text" class="form-control" id="signup_city_input" placeholder="City" name="city" required />
        </div>
      </div>
      <div class="form-group">
        <label for="signup_streetaddress_input">Street Address</label>
        <input type="text" class="form-control" id="signup_streetaddress_input" placeholder="Street Address" name="Street_address" required />
      </div>
    {% endif %}
    {% if not tables.Customer_Account %}
      <div class="row">
        <div class="form-group col-6">
          <label for="signup_username_input">Username</label>
          <input type="text" class="form-control" id="signup_username_input" placeholder="Username" name="Username" required />
        </div>
        <div class="form-group col-6">
          <label for="signup_password_input">Password</label>
          <input type="password" class="form-control" id="signup_password_input" placeholder="Password" name="Password" required />
        </div>
      </div>
      <div class="form-group">
        <div class="form-check">
          <input class="form-check-input" type="checkbox" id="gridCheck" required />
          <label class="form-check-label" for="gridCheck">Agree to terms and conditions</label>
        </div>
      </div>
      <button type="submit" class="btn btn-primary col-12">Sign up</button>
    {% else %}
      <div class="alert alert-danger mt-2" role="alert" id="signup_failure">
        An Account already exists for this SSN.
      </div>
    {% endif %}
  </form>